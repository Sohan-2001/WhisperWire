rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Authenticated users can read the list of all users for searching.
    // Users can only write their own data.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Chats can only be accessed by members of the chat.
    match /chats/{chatId} {
      // Allow read/write access to users who are members of the chat
      allow read, write: if request.auth.uid in resource.data.users;
    
      // Messages can only be created by authenticated users who are part of the chat.
      // Users can only edit or delete their own messages.
      match /messages/{messageId} {
        allow read: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
        allow create: if request.auth.uid == request.resource.data.uid && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
        allow update: if request.auth.uid == resource.data.uid && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
        allow delete: if request.auth.uid == resource.data.uid && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
      }
    }
  }
}
